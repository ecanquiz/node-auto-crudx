<script setup lang="ts">
  import { computed } from "vue"
  import useTab<%= tableMasterSingularUCamelCase; %> from "../../composables/<%= tableMasterSingularUCamelCase; %>/useTab<%= tableMasterSingularUCamelCase; %>";
  import Form<%= tableMasterSingularUCamelCase; %> from './Form<%= tableMasterSingularUCamelCase; %>.vue';

  const props = defineProps<{ id?: string }>()

  const {  
    <%= tableMasterSingular; %>,
    errors,
    pending,      
    submit    
  } = useTab<%= tableMasterSingularUCamelCase; %>(props.id)

  const isTrue = computed(
    () => <%= tableMasterSingular; %> || !props.id
  ) 
</script>

<template>
    <div class="">
      <Form<%= tableMasterSingularUCamelCase; %>
        v-if="isTrue"
        :<%= tableMasterSingular; %>="<%= tableMasterSingular; %>"
        :errors="errors"
        :pending="pending"
        @submit="submit"    
      />
    </div>
  </template>
  
