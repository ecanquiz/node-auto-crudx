<script setup lang="ts">
  import {ref} from 'vue'
  import Form<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %> from './Form<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>.vue'
  import Table<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %> from './Table<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>.vue'
  import useTab<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %> from '../../composables/<%= fn.uCamelCase(fn.singular(tableMaster)); %>/useTab<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>'
  const componentKey = ref(0);
  
  const props = defineProps<{ id?: string }>()
  
  const {
    panelOpened,
    closeButtonOpened,
    closeClassOpened,  
    <%= tableDetailCurrent.tableName %>,
    <%= fn.singular(tableDetailCurrent.tableName) %>,
  
    create<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>,
    edit<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>,
    get<%= fn.uCamelCase(tableDetailCurrent.tableName) %>,
    remove<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>,  
    submit<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>
  } = useTab<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>(props.id)

  const panelToogle = ()=> {
    if (!panelOpened.value) {
      create<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>()
    }
    panelOpened.value =! panelOpened.value    
  }
  </script>
  
  <template>
    <div class="demo-tab">
      <div class="form-group row">
        <div class="col-sm-12">
          <div class="grid justify-items-stretch">
            <AppBtn
              class="btn p-8 justify-self-center"
              type="text"                 
              data-testid="click-btn"
              :class="closeClassOpened"
              :text="`${closeButtonOpened} panel to add <%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>`"
              @click="panelToogle"
            />      
            <Form<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>
              v-if="panelOpened"
              class="bg-base-200 py-4 mt-2 rounded"
              :<%= fn.singular(tableDetailCurrent.tableName) %>="<%= fn.singular(tableDetailCurrent.tableName) %>"
              @submit<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>="submit<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>"
            />
            <Table<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>
              :key="componentKey"
              v-if="<%= tableDetailCurrent.tableName %>"
              :<%= tableDetailCurrent.tableName %>="<%= tableDetailCurrent.tableName %>"
              @edit<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>="edit<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>"
              @get<%= fn.uCamelCase(tableDetailCurrent.tableName) %>="get<%= fn.uCamelCase(tableDetailCurrent.tableName) %>"
              @remove<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>="remove<%= fn.uCamelCase(fn.singular(tableDetailCurrent.tableName)) %>"            
            />
          </div>
        </div>
      </div>
    </div>
  </template>
  
